<?xml version="1.0" encoding="utf-8"?>
<resources>
	<!-- Main button style -->
	<style name="MainMenuButton" parent="@android:style/Widget.Button">  
	  <item name="android:layout_height">38dip</item>
	  <item name="android:layout_width">0dip</item>    
	  <item name="android:textSize">14dp</item>    
	</style>

	<!-- Must have this title background style to set color for custom title bar.
	       Refer "http://stackoverflow.com/questions/2251714/set-title-background-color" -->
	<style name="WindowTitleBackground">     
       <item name="android:background">@color/titleBar</item>                   
	</style>
	
	<style name="DreamStyle">
		<item name="android:textSize">17sp</item>
		<item name="android:textColor">@color/forestGreen</item>
		<item name="android:background">@color/ivory</item>
	</style>
	
	<style name="DreamTextView">
		<item name="android:textSize">17sp</item>
		<item name="android:textColor">@color/forestGreen</item>
		<item name="android:background">@color/ivory</item>
	</style>
	
	<style name="DreamListView">						   			   
		<item name="android:textSize">17sp</item>
		<item name="android:textColor">@color/forestGreen</item>
		<item name="android:background">@color/ivory</item>
		<item name="android:choiceMode">singleChoice</item>
		<item name="android:drawSelectorOnTop">false</item>
		<item name="android:divider">@color/mistyRose</item>
		<item name="android:dividerHeight">5dip</item>
		<item name="android:fadingEdge">none</item>
		<item name="android:headerDividersEnabled">true</item>
		<item name="android:footerDividersEnabled">true</item>
	</style>
</resources>
